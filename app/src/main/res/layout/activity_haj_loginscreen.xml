<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/hajsscreen"
    tools:context=".hajLoginscreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:background="#6FFFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Here"
            android:textColor="@color/darkgreen"
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:textSize="20dp"
            >

        </TextView>



            <RadioGroup

                android:id="@+id/groupradio"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- In RadioGroup create the 1 Radio Button-->
                <!-- like this we will add some more Radio Button-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id1"
            android:paddingRight="120dp"
            android:textColor="#B2000000"
            android:text="Pilgrim"
            />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id2"
            android:text="Official"
            android:textColor="#B2000000"
            />
    </LinearLayout>



            </RadioGroup>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_user_name"
            android:hint="User Name"

            android:textColor="#61000000"
            android:textColorHint="@color/darkgreen">

        </EditText>
        <EditText
            android:id="@+id/et_password"
            android:hint="Password"
            android:textColor="#ffffff"
            android:textColorHint="@color/darkgreen"
            android:inputType="textPassword"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:text="SUBMIT"

            android:backgroundTint="@color/darkgreen"
            android:textColor="#ffffff"></Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/forgotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FORGOT PASSWORD?"
                android:paddingRight="120dp"
                android:textColor="#B2000000"></TextView>
            <TextView
                android:id="@+id/joinnow"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="JOIN NOW"

                android:textColor="#B2000000">
            </TextView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>